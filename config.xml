<?xml version='1.0' encoding='utf-8'?>

<widget id="com.example.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">


	<icon src="img/logo.png" />

    <name>HomeScreen</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="img/abc.jpg" density="land-hdpi"/>
    <splash src="img/abc.jpg" density="land-ldpi"/>
    <splash src="img/abc.jpg" density="land-mdpi"/>
    <splash src="img/abc.jpg" density="land-xhdpi"/>

    <preference name="SplashScreenDelay" value="10000" />
</platform>
